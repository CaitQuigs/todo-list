<p id="notice"><%= notice %></p>

<div class="row">
  
  <div class="col-md-4">
    <%= link_to new_task_path, remote: true do %>
      <button class="btn btn-info btn-lg btn-block"><i class="fas fa-plus"></i> Add Task</button>
    <% end %>

    <div id="task-form" style="display:none;"></div>
  </div>

  <div class="col-md-8">
    <h2 class="headline">Tasks</h2>
      <div id="tasks">
        <%= render @tasks %>
      </div>
  </div>
</div>